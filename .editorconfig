root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# 4 space indentation
[*.{js, jsx, json, py}]
indent_size = 4
indent_style = space
max_line_length = 120

# 2 space indentation
[*.{css, html, sass, scss, yml}]
indent_size = 2
indent_style = space

[Makefile]
indent_style = tab
